<div class="ticket-container col-12 container">
  <br />
  <div class="title-editor">Descrizione</div>
  <br />
  <ckeditor #editor [config]="config" [(ngModel)]="htmlContent" [editor]="Editor" (change)="onChange($event)"></ckeditor>
  <br />

  <div class="table__content">
    <mat-table #table [dataSource]="dataSource" class="col-12">

      <!-- day Column -->
      <ng-container matColumnDef="weekday_start">
        <mat-header-cell *matHeaderCellDef class="col-12">Orario Apertura {{service[ServiceId]}}</mat-header-cell>
        <mat-cell *matCellDef="let element" class="col-3"> {{week[element.weekday_start]}} </mat-cell>
      </ng-container>

      <!-- from time Column -->
       <ng-container matColumnDef="time_start">
        <mat-cell *matCellDef="let element" class="col-3">Dalle  {{element.time_start}} </mat-cell>
      </ng-container>

      <!-- to time Column -->
      <ng-container matColumnDef="time_end">
        <mat-cell *matCellDef="let element" class="col-3">Alle
          <<mat-input-container floatPlaceholder="auto">
              <input matInput formControlName="time_end"
                     type="text"
                     required
                     placeholder=""
                     value="{{element.time_end}}">
          </mat-input-container>
          </mat-cell>
      </ng-container>

      <!-- Action Column -->
      <ng-container matColumnDef="id">
        <mat-cell *matCellDef="let element" class="col-4 text-center" >
          <div class="action">
            <mat-icon class="icon--clickable"          >control_point</mat-icon>
          </div>

        </mat-cell>
      </ng-container>


      <mat-header-row *matHeaderRowDef="displayedColumns"></mat-header-row>
      <mat-row *matRowDef="let row; columns: displayedColumns;"></mat-row>
    </mat-table>
  </div>




</div>
